<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.and006.freakingmath.MainActivity"
        android:background="@color/colorPrimaryDark"

        android:orientation="vertical" android:weightSum="10">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/imageView"
            android:background="@drawable/banner"

            android:elevation="0dp" android:layout_weight="3"/>
    <Button

            android:layout_width="180dp"
            android:layout_height="80dp" android:id="@+id/btnPlay"
            android:background="@drawable/btn_play"
            android:layout_gravity="center" android:layout_marginTop="50dp" android:layout_marginBottom="30dp"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center" android:layout_weight="5">
        <Button
                android:background="@drawable/btn_rate"
                android:layout_width="70dp"
                android:layout_height="40dp" android:id="@+id/btnRate" android:layout_weight="1"
                android:layout_marginRight="10dp"/>
        <Button
                android:background="@drawable/rank"
                android:layout_width="70dp"
                android:layout_height="40dp" android:id="@+id/btnRank" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
