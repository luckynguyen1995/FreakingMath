<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.and006.freakingmath.activity_play" android:orientation="vertical"
        android:background="@color/colorPrimaryDark"

>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="bottom|center"
            android:layout_x="0dp" android:layout_y="439dp"
            android:padding="30dp">
        <Button
                android:background="@drawable/btn_yes"
                android:layout_width="160dp"
                android:layout_height="100dp" android:id="@+id/btnRight"
                android:layout_marginRight="10dp" android:layout_weight="0.78"/>
        <Button
                android:background="@drawable/btn_no"
                android:layout_width="160dp"
                android:layout_height="100dp" android:id="@+id/btnWrong" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="36.48" android:layout_x="0dp"
            android:layout_y="115dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtMath"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_light"
                    android:textSize="80sp" android:layout_x="15dp" android:layout_y="86dp"
                    android:textAlignment="center" android:layout_weight="1" android:text="XXX"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:elevation="1dp" android:layout_gravity="center">
            <TextView
                    android:text="="
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textSize="80sp" android:textAlignment="viewEnd" android:layout_width="145dp"
                    android:textColor="@android:color/background_light"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtResult"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_light"
                    android:textSize="80sp" android:layout_x="18dp" android:layout_y="167dp"
                    android:textAlignment="viewStart" android:layout_weight="1" android:text="YYY"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_x="0dp" android:layout_y="4dp"
            android:id="@+id/txtScore" android:textColor="@android:color/background_light" android:textSize="30sp"
            android:textStyle="bold" android:textAlignment="viewEnd" android:paddingRight="10dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_x="8dp" android:layout_y="94dp"
            android:id="@+id/txtTest2" android:textSize="20sp" android:textColor="@android:color/background_light"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_x="3dp" android:layout_y="66dp"
            android:id="@+id/txtTest" android:textSize="20sp" android:textColor="@android:color/background_light"/>
    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp" android:layout_y="43dp" android:id="@+id/progressBar"
    />
</AbsoluteLayout>
